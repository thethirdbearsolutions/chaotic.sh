{
  "name": "chaotic-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "generate-html": "node scripts/generate-dev-html.js",
    "dev": "node scripts/generate-dev-html.js && vite",
    "build": "node scripts/generate-dev-html.js && eslint src/ && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "dompurify": "^3.2.4",
    "marked": "^15.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jsdom": "^26.0.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  }
}
